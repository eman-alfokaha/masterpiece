<!DOCTYPE html>
<html>
    <head>
        <style>

            .na
            {
                text-decoration:none;
                color:white;
            }

        </style>
       
        <title>@ViewBag.Title</title>

        @RenderSection("head" , required : false)

       <link href="~/Content/bootstrap.css" rel="stylesheet" />
       <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">OnLine Shopping</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @*<a class="nav-link active" aria-current="page" href="#">Home</a>*@
                            @Html.ActionLink("Category" , "Index" , "User" , null , new { @class = "ht"})
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" href="#">about</a>
                        </li>*@
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @*<a class="nav-link active" aria-current="page" href="#">Home</a>*@
                            @Html.ActionLink("Category", "Index", "User", null, new { @class = "ht" })
                        </li>
                        <li style="float:right">
                            @if (Session["u_id"] != null)
                            {
                                @Html.ActionLink("Post An Ad", "CreateAdd", "User", null, new { @class = "ht" })

                            }
                        </li>
                        <li style="float:right">
                            @if (Session["u_id"] == null)
                            {
                                @Html.ActionLink("Sign In", "Login", "User", null, new { @class = "ht" })

                            }
                        </li>
                        <li style="float:right">
                            @if (Session["u_id"] == null)
                            {
                                @Html.ActionLink("Sign Up", "Register", "User", null, new { @class = "ht" })

                            }
                            else
                            {
                                @Html.ActionLink("Sign Out", "SignOut", "User", null, new { @class = "ht" })

                            }
                        </li>

                    </ul>
                       
                       
                    </ul>
                </div>
            </div>
        </nav>
              
        
        @RenderBody()
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

                </body>
            </html>
